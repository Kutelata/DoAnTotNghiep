@{
    Layout = "_LayoutAuthorize";
}
@model BookSocial.EntityClass.Entity.User

<h2 class="log-title text-center">Đăng ký</h2>

<form method="post" action="@Url.Action("Register","Route")">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input type="text" asp-for="Name" />
        <label class="control-label" for="input">Tên người dùng</label><i class="mtrl-select"></i>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="text" asp-for="Account" />
        <label class="control-label" for="input">Tài khoản</label><i class="mtrl-select"></i>
        <span asp-validation-for="Account" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="password" asp-for="Password" />
        <label class="control-label" for="input">Mật khẩu</label><i class="mtrl-select"></i>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="text" asp-for="Email" />
        <label class="control-label" for="input">Địa chỉ email</label><i class="mtrl-select"></i>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <a href="@Url.Action("Login","Route")" title="" class="forgot-pwd" style="width:100%">Bạn đã có tài khoản?</a>
    <div class="submit-btns" style="display:flex;justify-content:center">
        <button class="mtr-btn" type="submit"><span>Đăng ký</span></button>
    </div>
</form>