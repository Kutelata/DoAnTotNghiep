@model List<BookSocial.EntityClass.DTO.RecentActivityComment>

<h4 class="widget-title">HOẠT ĐỘNG NGƯỜI DÙNG GẦN ĐÂY</h4>
<ul class="activitiez">
    @foreach (var item in Model)
    {
        <li>
            <div class="activity-meta">
                <i>@TimeHelper.GetPrettyDate(@item.CommentCreatedAt)</i>
                <h6><a href="#">@item.UserCommentName</a></h6>
                <span>
                    <a href="@Url.Action("BookProfile","Home",new{bookId=item.BookId})">đã bình luận bài đánh giá của @item.UserReviewName</a>
                </span>
            </div>
        </li>
    }
</ul>