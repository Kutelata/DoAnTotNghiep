@using BookSocial.Presentation.Admin.Views.Shared.Components
@model IEnumerable<BookSocial.EntityClass.DTO.GenreStatistic>

<div class="col-md-12 col-sm-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Genre List</h2>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <a href="@Url.Action("CreateGenre","Home")" class="btn btn-dark"><i class="fa fa-plus"></i> Create New</a>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 mt-2">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @(await Html.RenderComponentAsync<SearchList>(RenderMode.ServerPrerendered, new { _action = "GenreList" }))
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @(await Html.RenderComponentAsync<SortList>(RenderMode.ServerPrerendered, new {  }))
                        </div>
                    </div>
                </div>
            </div>

            <div class="table-responsive mt-2">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">Id</th>
                            <th class="column-title">Genre Name</th>
                            <th class="column-title">Number Of Books</th>
                            <th class="column-title no-link last">
                                <span class="nobr">Action</span>
                            </th>
                            <th class="bulk-actions" colspan="7">
                                <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="even pointer">
                                <td class=" ">@item.Id</td>
                                <td class=" ">@item.Name</td>
                                <td class=" ">@item.NumberOfBooks</td>
                                <td class=" last">
                                    <a href="#" class="btn btn-outline-info"><i class="fa fa-folder"></i> View</a>
                                    <a href="#" class="btn btn-outline-primary"><i class="fa fa-pencil"></i> Edit</a>
                                    <a href="#" class="btn btn-outline-danger"><i class="fa fa-trash-o"></i> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <ul class="pagination my_pagination">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li>
                            <a href="@Url.Action("GenreList","Home",
                            new{page=ViewBag.CurrentPage-1,search=ViewBag.CurrentSearch})">Previous</a>
                        </li>
                    }

                    @for (var i = 0; i < ViewBag.Pages; i++)
                    {
                        if ((i + 1) == ViewBag.CurrentPage)
                        {
                            <li>
                                <a class="active" href="@Url.Action("GenreList","Home",
                                new{page=i+1,search=ViewBag.CurrentSearch})">@(i+1)</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("GenreList","Home",
                                new{page=i+1,search=ViewBag.CurrentSearch})">@(i+1)</a>
                            </li>
                        }
                    }

                    @if (ViewBag.CurrentPage < ViewBag.Pages)
                    {
                        <li>
                            <a href="@Url.Action("GenreList","Home",
                            new{page=ViewBag.CurrentPage+1,search=ViewBag.CurrentSearch})">Next</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>