@using BookSocial.Presentation.Admin.Views.LibraryManager.Genre
@using BookSocial.Presentation.Admin.Views.Shared.Components
@model IEnumerable<BookSocial.EntityClass.DTO.GenreStatistic>

<div class="col-md-12 col-sm-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>Genre List</h2>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3">
                    @(await Html.RenderComponentAsync<Create>(RenderMode.ServerPrerendered))
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-9">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6 mb-2">
                            @{
                                Dictionary<string, string> listDropDown = new Dictionary<string, string>();
                                listDropDown.Add("Name", "Genre Name");
                                listDropDown.Add("NumberOfBooks", "Number Of Books");
                            }
                            @(await Html.RenderComponentAsync<SortList>(RenderMode.ServerPrerendered,
                            new { _listDropDown = listDropDown }))
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                            @(await Html.RenderComponentAsync<SearchList>(RenderMode.ServerPrerendered, new { }))
                        </div>
                    </div>
                </div>
            </div>
            @(await Html.RenderComponentAsync<Message>(RenderMode.ServerPrerendered))
            <div class="table-responsive mt-2">
                <table class="table table-striped jambo_table bulk_action">
                    <thead>
                        <tr class="headings">
                            <th class="column-title">Id</th>
                            <th class="column-title">Genre Name</th>
                            <th class="column-title">Number Of Books</th>
                            <th class="column-title no-link last">
                                <span class="nobr">Action</span>
                            </th>
                            <th class="bulk-actions" colspan="7">
                                <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="even pointer">
                                <td class=" ">@item.Id</td>
                                <td class=" ">@item.Name</td>
                                <td class=" ">@item.NumberOfBooks</td>
                                <td class=" last">
                                    @(await Html.RenderComponentAsync<CRUDD>(RenderMode.ServerPrerendered, new { _activity="View" }))
                                    @(await Html.RenderComponentAsync<Edit>(RenderMode.ServerPrerendered, new { genreId = @item.Id }))
                                    @(await Html.RenderComponentAsync<CRUDD>(RenderMode.ServerPrerendered, new { _activity="Delete" }))
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <ul class="pagination my_pagination">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li>
                            <a href="@Url.Action("GenreList","Home",
                            new{page=ViewBag.CurrentPage-1,search=ViewBag.CurrentSearch})">Previous</a>
                        </li>
                    }

                    @for (var i = 0; i < ViewBag.Pages; i++)
                    {
                        if ((i + 1) == ViewBag.CurrentPage)
                        {
                            <li>
                                <a class="active" href="@Url.Action("GenreList","Home",
                                new{page=i+1,search=ViewBag.CurrentSearch})">@(i+1)</a>
                            </li>
                        }
                        else
                        {
                            <li>
                                <a href="@Url.Action("GenreList","Home",
                                new{page=i+1,search=ViewBag.CurrentSearch})">@(i+1)</a>
                            </li>
                        }
                    }

                    @if (ViewBag.CurrentPage < ViewBag.Pages)
                    {
                        <li>
                            <a href="@Url.Action("GenreList","Home",
                            new{page=ViewBag.CurrentPage+1,search=ViewBag.CurrentSearch})">Next</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
