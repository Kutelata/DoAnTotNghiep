@inject NavigationManager Navigator

<div class="input-group my-input-group">
    <input type="text"
           class="form-control my-form-control"
           @bind="@currentValue"
           @oninput="@((e) => { currentValue=(string)e.Value;})"
           placeholder="Search ..." />
    <div class="input-group-append">
        <button @onclick="SearchAll" class="btn btn-outline-secondary" type="button"><i class="fa fa-search"></i> Search</button>
    </div>
</div>

@code {
    static string currentValue { get; set; }

    [Parameter]
    public string _action { get; set; }

    void SearchAll()
    {
        Navigator.NavigateTo($"{Navigator.BaseUri}Home/{_action}?page=1&search={currentValue}", true);
    }
}