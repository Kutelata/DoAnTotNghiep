@using BookSocial.EntityClass.Enum
@using BookSocial.Service
@model List<BookSocial.EntityClass.DTO.ShelfListHome>

@{
    var host = ConnectAdmin.BookSocialAdmin;
}

<h4 class="widget-title">CURRENTLY READING</h4>
@foreach (var item in Model)
{
    <div class="your-page">
        <figure>
            <a href="@Url.Action("BookDetail","Home",new{bookId=item.BookId})"><img style="border-radius:unset" src="@host/assets/images/book/@item.BookImage"></a>
        </figure>
        <div class="page-meta">
            <a href="@Url.Action("BookDetail","Home",new{bookId=item.BookId})" style="font-size:14px" class="underline">@item.BookName</a>
            <span>
                <a href="">
                    by
                    @{
                        var count = 0;
                    }
                    @foreach (var author in item.AuthorListByBookId)
                    {
                        count++;
                        if (count > 1)
                        {
                            <span>, @author.AuthorName</span>
                        }
                        else
                        {
                            <span>@author.AuthorName</span>
                        }
                    }
                </a>
            </span>
        </div>
    </div>
}
