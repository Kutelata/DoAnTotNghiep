@using BookSocial.Service
@model List<BookSocial.EntityClass.DTO.FriendListHome>

@{
    var host = ConnectAdmin.BookSocialAdmin;
}

<h4 class="widget-title">SUGGEST</h4>
<ul class="followers">
    @foreach (var item in Model)
    {
        <li>
            <figure><img src="@host/assets/images/user/@item.Image" /></figure>
            <div class="friend-meta">
                <h4><a href="@Url.Action("UserDetail","Home", new{userId=@item.UserFriendId})">@item.UserFriendName</a></h4>
                <a href="@Url.Action("UserDetail","Home", new{userId=@item.UserFriendId})" class="underline">Add Friend</a>
            </div>
        </li>
    }
</ul>