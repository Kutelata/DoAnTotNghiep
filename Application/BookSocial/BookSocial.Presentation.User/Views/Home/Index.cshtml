@using BookSocial.EntityClass.Enum
@using BookSocial.Presentation.User.Helper
@using BookSocial.Service
@model BookSocial.EntityClass.DTO.HomeList

@section css{
<link rel="stylesheet" href="~/my_style/home/index.css" />
}

<div class="col-lg-3">
    <aside class="sidebar static left">
        <div class="widget">
            @await Html.PartialAsync("Partials/CurrentlyReading.cshtml", Model.ShelfListHome)
        </div><!-- page like widget -->
    </aside>
</div><!-- sidebar -->

<div class="col-lg-6">
    @await Html.PartialAsync("~/Views/Review/Partials/ReviewList.cshtml", Model.ReviewList)
    <button class="btn-view btn-load-more">Load More</button>
</div><!-- centerl meta -->

<div class="col-lg-3">
    <aside class="sidebar static right">
        <div class="widget">
            @await Html.PartialAsync("Partials/RecentActivity.cshtml", Model.RecentActivityComment)
        </div><!-- recent activites -->
    </aside>
</div><!-- sidebar -->

@section script{
    <script src="~/my_script/get_param_url.js"></script>
    <script src="~/my_script/shelf/change_progress_origin.js"></script>
}