@{
    Layout = null;
}
@model BookSocial.EntityClass.DTO.UserLogin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" href="~/images/favicon.ico" type="image/ico">

    <title>DanhGiaSachCMS</title>

    <!-- Bootstrap -->
    <link href="../vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="../vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- Custom Theme Style -->
    <link href="../build/css/custom.min.css" rel="stylesheet">

    <!-- My Style -->
    <link href="~/my_style/layout.css" rel="stylesheet">
    <style>
        #div-toggle-password {
            position: relative;
        }

        #btn-toggle-password {
            position: absolute;
            right: 0;
            top: 0;
        }
    </style>
</head>
<body class="login">
    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form action="@Url.Action("Login","Route")" method="post">
                        <h1>DanhGiaSachCMS</h1>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div>
                            <input type="text" class="form-control" asp-for="Account" placeholder="Tài khoản" />
                        </div>
                        <div id="div-toggle-password">
                            <input id="input-toggle-password" type="password" class="form-control" asp-for="Password" placeholder="Mật khẩu" />
                            <a href="#" id="btn-toggle-password"><i id="ic-toggle-password" class="fa fa-eye"></i></a>
                        </div>
                        <div>
                            <input type="submit" class="my-btn-login btn btn-default submit" value="Đăng nhập" />
                        </div>
                        <div class="clearfix"></div>
                        <div class="separator"></div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <!-- JQuery -->
    <script src="~/vendors/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).on("click", "#btn-toggle-password", function(e) {
            if ($('#ic-toggle-password').hasClass('fa-eye')) {
                $('#ic-toggle-password').removeClass('fa-eye')
                $('#ic-toggle-password').addClass('fa-eye-slash')
                $('#input-toggle-password').attr('type', 'text')
            } else {
                $('#ic-toggle-password').addClass('fa-eye')
                $('#ic-toggle-password').removeClass('fa-eye-slash')
                $('#input-toggle-password').attr('type', 'password')
            }
        })
    </script>
</body>
</html>